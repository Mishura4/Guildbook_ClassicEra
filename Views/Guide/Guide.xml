<Ui> <!--warboard-parchment-->
    <Frame name="GuildbookGuide" mixin="GuildbookGuideMixin">
        <Layers>
            <Layer level="BACKGROUND">
                <Texture textureSubLevel="-1">
                    <Color r="0.1" g="0.1" b="0.1" a="0.6"/>
                    <Size y="40"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="0" y="0"/>
                        <Anchor point="TOPRIGHT" x="0" y="0"/>
                    </Anchors>
                </Texture>
                <Texture atlas="AdventureMapLabel-Large">
                    <Size y="40"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="360" y="0"/>
                        <Anchor point="TOPRIGHT" x="-120" y="0"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString parentKey="tabTitle" inherits="GameFontNormalLarge" text="Lore">
                    <Color r="1" g="1" b="1"/>
                    <Size y="40"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="360" y="0"/>
                        <Anchor point="TOPRIGHT" x="-120" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button parentKey="homeDropdown" frameLevel="8" inherits="GuildbookWidgetsDropDownTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="0"/>
                </Anchors>
                <Size x="180" y="40"/>
            </Button>
            <Button parentKey="activityDropdown" frameLevel="8" inherits="GuildbookWidgetsDropDownTemplate">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.homeDropdown" relativePoint="RIGHT" x="0" y="0"/>
                </Anchors>
                <Size x="180" y="40"/>
            </Button>

            <Frame parentKey="mapsButton" inherits="GuildbookSmallHighlightButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="0" y="0"/>
                </Anchors>
                <Size x="40" y="40"/>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background" atlas="GarrMission_MissionIcon-Exploration">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="encountersButton" inherits="GuildbookSmallHighlightButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-40" y="0"/>
                </Anchors>
                <Size x="40" y="40"/>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background" atlas="ShipMissionIcon-Combat-Mission">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>
            <Frame parentKey="infoButton" inherits="GuildbookSmallHighlightButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-80" y="0"/>
                </Anchors>
                <Size x="40" y="40"/>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture parentKey="background" atlas="GarrMission_MissionIcon-Logistics">
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
            </Frame>


