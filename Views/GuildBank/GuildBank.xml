<Ui>
    <Frame name="GuildbookGuildBank" mixin="GuildbookGuildBankMixin">

        <Layers>
            <Layer level="background">
            
            </Layer>
        </Layers>

        <Frames>
            <Frame parentKey="charactersListview" inherits="GuildbookWidgetsListviewTemplate">
                <Size x="200"/>
                <Anchors>
                    <Anchor point="TOPLEFT" x="0" y="0"/>
                    <Anchor point="BOTTOMLEFT" x="0" y="0"/>
                </Anchors>
                <KeyValues>
                    <KeyValue key="frameType" value="FRAME" type="string"/>
                    <KeyValue key="itemTemplate" value="GuildbookListviewItem" type="string"/>
                    <KeyValue key="elementHeight" value="40" type="number"/>
                </KeyValues>
            </Frame>

            <Frame parentKey="containerInfo">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeKey="$parent.charactersListview" relativePoint="TOPRIGHT" x="0" y="0"/>
                    <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                </Anchors>

                <Layers>
                    <Layer level="OVERLAY">
                        <FontString parentKey="characterInfo" inherits="GameFontNormalLarge" justifyH="LEFT">
                            <Size y="26"/>
                            <Color r="1" g="1" b="1"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" x="0" y="0"/>
                                <Anchor point="TOPRIGHT" x="0" y="0"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>

                <Frames>
                    <Frame parentKey="itemsListview" inherits="GuildbookWidgetsListviewTemplate">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeKey="$parent.characterInfo" relativePoint="BOTTOMLEFT" x="0" y="0"/>
                            <Anchor point="BOTTOMRIGHT" x="0" y="0"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="frameType" value="FRAME" type="string"/>
                            <KeyValue key="itemTemplate" value="GuildbookGuildBankListviewItem" type="string"/>
                            <KeyValue key="elementHeight" value="24" type="number"/>
                        </KeyValues>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>
    
        <Scripts>
            <OnLoad method="OnLoad"/>
            <OnShow method="OnShow"/>
        </Scripts>  
    </Frame>
</Ui>